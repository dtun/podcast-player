{
  "preset": "jest-expo",
  "setupFilesAfterEnv": ["./jest.setup.js"],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/*.{js,jsx,ts,tsx}",
    "!**/coverage/**",
    "!**/node_modules/**",
    "!**/babel.config.js",
    "!**/metro.config.js",
    "!**/jest.setup.js",
    "!**/.expo/**",
    "!**/mocks/**",
    "!**/test-utils/**",
    "!**/builders/**",
    "!**/expo-env.d.ts"
  ],
  "transformIgnorePatterns": [
    "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|@unimodules/.*|unimodules|sentry-expo|react-native-svg|@ui-kitten)"
  ]
}
